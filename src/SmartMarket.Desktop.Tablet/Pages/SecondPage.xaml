<Page x:Class="SmartMarket.Desktop.Tablet.Pages.SecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartMarket.Desktop.Tablet.Components.Loader"
      mc:Ignorable="d" 
      Title="SecondPage"
      Loaded="Page_Loaded">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border
            CornerRadius="5"
            BorderThickness="0.5"
            BorderBrush="{DynamicResource BorderColor}"
            Background="{DynamicResource FirstColor}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    CornerRadius="5 5 0 0 "
                    BorderThickness="0 0 0 0.5"
                    BorderBrush="{DynamicResource BorderColor}"
                    Background="{DynamicResource BFirstColor}"/>

                <Label
                    Grid.Row="0"
                    Content="Jo'natmalar"
                    Margin="10 0 0 0"
                    Foreground="{DynamicResource FirstColor}"
                    Style="{DynamicResource MainLabel}"/>

                <TextBox
                    Grid.Row="1"
                    Margin="50 0"
                    Style="{DynamicResource search}"/>
                <Grid Grid.Row="2">
                    <local:Loader
                        Visibility="Hidden"
                        x:Name="shipmentLoader"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                    
                    <ScrollViewer
                        PanningMode="Both"
                        Margin="1"
                        Stylus.IsFlicksEnabled="False"
                        Stylus.IsPressAndHoldEnabled="False">

                        <StackPanel
                            x:Name="st_shipments">

                        </StackPanel>

                    </ScrollViewer>

                    <Label
                         Name="ShipmentEmptyData"
                         Visibility="Collapsed"
                         FontSize="13"
                         Foreground="#a6a6a6"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Content="Ma'lumot topilmadi."/>
                </Grid>

                <Button
                    x:Name="Exit_Button"
                    Grid.Row="3"
                    Margin="80 0"
                    Content="Orqaga"
                    FontSize="20"
                    Click="Exit_Button_Click"
                    Background="{DynamicResource BSecondColor}"
                    Style="{DynamicResource MainButton}"/>

            </Grid>
            
        </Border>

        <Grid
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                CornerRadius="5"
                Margin="5 0 0 0"
                BorderThickness="0.5"
                BorderBrush="{DynamicResource BorderColor}"
                Background="{DynamicResource FirstColor}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox
                        Name="tb_search"
                        Margin="50 0"
                        TextChanged="tb_search_TextChanged"
                        Style="{DynamicResource search}"/>

                    <Grid
                        Margin="5 0 15 0"
                        Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <Label
                            Margin="10 0 0 0"
                            Grid.Column="0"
                            Content="Nomi"
                            Style="{DynamicResource TitleLabel}"/>

                        <Label
                            Grid.Column="1"
                            Content="Kategoriya"
                            Style="{DynamicResource TitleLabel}"/>

                        <Label
                            Grid.Column="2"
                            Content="Soni"
                            Style="{DynamicResource TitleLabel}"/>

                        <Label
                            Grid.Column="3"
                            Content="Narxi"
                            Style="{DynamicResource TitleLabel}"/>


                    </Grid>

                    <Grid
                        Grid.Row="2">

                        <local:Loader
                            Visibility="Hidden"
                            x:Name="Loader"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>

                        <ScrollViewer
                            PanningMode="Both"
                            Margin="1 5 1 10"
                            Stylus.IsFlicksEnabled="False"
                            Stylus.IsPressAndHoldEnabled="False">

                            <StackPanel
                                x:Name="st_searchproduct">

                            </StackPanel>

                        </ScrollViewer>

                        <Label
                            Name="EmptyData"
                            Visibility="Collapsed"
                            FontSize="13"
                            Foreground="#a6a6a6"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="Ma'lumot topilmadi."/>

                    </Grid>
                    

                </Grid>

            </Border>

            <Border
                Grid.Row="1"
                Margin="5 5 0 0"
                CornerRadius="5"
                BorderThickness="0.5"
                BorderBrush="{DynamicResource BorderColor}"
                Background="{DynamicResource FirstColor}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="10 0">

                        <Label
                            Content="Mijoz :"
                            FontSize="13"
                            Style="{DynamicResource InfoLabel}"/>

                        <Label
                            FontSize="16"
                            Content="Sobir aka"
                            Style="{DynamicResource MainLabel}"/>

                        <Label
                            Margin="0 10 0 0"
                            Content="Yig'uvchi :"
                            FontSize="13"
                            Style="{DynamicResource InfoLabel}"/>

                        <Label
                            FontSize="16"
                            Content="Sobir aka"
                            Style="{DynamicResource MainLabel}"/>

                    </StackPanel>

                    <StackPanel
                        VerticalAlignment="Center"
                        Grid.Column="1">

                        <Label
                            Content="Jami summa :"
                            FontSize="15"
                            HorizontalAlignment="Center"
                            Style="{DynamicResource InfoLabel}"/>

                        <Label x:Name="lbProductTotalPrice"
                            Content="0"
                            FontSize="20"
                            HorizontalAlignment="Center"
                            Style="{DynamicResource MainLabel}"/>

                    </StackPanel>

                </Grid>

            </Border>

            <Border
                Grid.Row="2"
                Margin="5 5 0 0"
                CornerRadius="5"
                BorderThickness="0.5"
                BorderBrush="{DynamicResource BorderColor}"
                Background="{DynamicResource FirstColor}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid
                            Margin="5 0 15 0"
                            Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.3*"/>
                            </Grid.ColumnDefinitions>

                            <Label
                                Margin="10 0 0 0"
                                Grid.Column="0"
                                Content="Nomi"
                                Style="{DynamicResource TitleLabel}"/>

                            <Label
                                Grid.Column="1"
                                Content="Soni"
                                Style="{DynamicResource TitleLabel}"/>

                            <Label
                                Grid.Column="2"
                                Content="Narxi"
                                Style="{DynamicResource TitleLabel}"/>

                            <Label
                                Grid.Column="3"
                                Content="Chegirma"
                                Style="{DynamicResource TitleLabel}"/>

                            <Label
                                Grid.Column="4"
                                Content="Jami summa"
                                Style="{DynamicResource TitleLabel}"/>

                        </Grid>

                        <Grid
                            Grid.Row="1">
                            <local:Loader
                                Visibility="Hidden"
                                x:Name="productLoader"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                            
                            <ScrollViewer
                                Margin="1 5 1 10">

                                <StackPanel
                                    x:Name="st_product">

                                </StackPanel>

                            </ScrollViewer>

                            <Label
                                 Name="productEmptyData"
                                 Visibility="Collapsed"
                                 FontSize="13"
                                 Foreground="#a6a6a6"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Content="Jo'natma tanlanmagan."/>
                        </Grid>

                    </Grid>

                    <Grid
                        Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button
                            x:Name="Minus_Button"
                            Grid.Row="0"
                            Margin="2 5"
                            Click="Minus_Button_Click"
                            Tag="{DynamicResource minus}"
                            Style="{DynamicResource ActionButton}"/>

                        <Button
                            x:Name="Plus_Button"
                            Grid.Row="1"
                            Margin="2 5"
                            Click="Plus_Button_Click"
                            Tag="{DynamicResource pilus}"
                            Style="{DynamicResource ActionButton}"/>

                        <Button
                            Grid.Row="2"
                            Margin="2 5"
                            Name="Delete_Button"
                            Click="Delete_Button_Click"
                            Tag="{DynamicResource delete}"
                            Style="{DynamicResource ActionButton}"/>

                        <Button
                            x:Name="Save_Button"
                            Grid.Row="3"
                            Margin="2 5"
                            Click="Save_Button_Click"
                            Tag="{DynamicResource save}"
                            Style="{DynamicResource ActionButton}"/>

                    </Grid>
                    
                </Grid>
                
            </Border>

        </Grid>
        
    </Grid>
</Page>
