<Application x:Class="SmartMarket.Desktop.Tablet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SmartMarket.Desktop.Tablet"
             StartupUri="Windows/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="\Themes\LightTheme.xaml"/>
                <ResourceDictionary Source="\Styles\ButtonStyles.xaml"/>
                <ResourceDictionary Source="\Styles\LabelStyles.xaml"/>
                <ResourceDictionary Source="\Styles\TextBoxStyles.xaml"/>
                <ResourceDictionary Source="\Assets\Icons\Icon.xaml"/>

                <ResourceDictionary Source="/WPFNotification;component/Assets/NotificationUI.xaml" />

                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
