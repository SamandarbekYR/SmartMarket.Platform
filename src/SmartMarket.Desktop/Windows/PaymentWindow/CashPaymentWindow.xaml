<Window x:Class="SmartMarket.Desktop.Windows.PaymentWindow.CashPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMarket.Desktop.Windows.PaymentWindow"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="CashPaymentWindow" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel
            Grid.Row="0"
            Background="#04C217"
            >


            <TextBlock
                Text="To'lov Naqd"
                VerticalAlignment="Center"
                Foreground="White"
                FontSize="20"
                FontWeight="SemiBold"
                Margin="15 0 0 0"
                ></TextBlock>
            <Border 
                  x:Name="btnclose"
                  MouseUp="btnclose_MouseUp"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  Margin="0 0 10 0"
                  Background="Transparent"
                  BorderThickness="0"
    >
                <md:PackIcon Kind="Close"
                             Width="30"
                             Height="30"
                             Foreground="White"
                             ></md:PackIcon>
            </Border>
        </DockPanel>

        <StackPanel Grid.Row="1">

            <TextBlock Text="To'lov Miqdori"
                       FontSize="18"
                       Margin="35 10 0 0"
                       ></TextBlock>
            <TextBox
                x:Name="tnPayAmount"
                Height="40"
                Margin="35 5 35 20"
                Style="{DynamicResource tbPaymentstyle}"
                Text="250000.0"
               
                ></TextBox>

            <Button
                x:Name="BtnPay"
                Content="To'lov"
                Foreground="White"
                FontSize="20"
                FontWeight="SemiBold"
                Background="#04C217"
                Style="{DynamicResource BtnPayment}"
                >
                
            </Button>            

        </StackPanel>
    </Grid>
</Window>
