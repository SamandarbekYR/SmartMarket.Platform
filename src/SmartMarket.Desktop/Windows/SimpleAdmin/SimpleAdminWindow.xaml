<Window x:Class="SmartMarket.Desktop.Windows.SimpleAdmin.SimpleAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMarket.Desktop.Windows.SimpleAdmin"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Grid
        Background="{DynamicResource SecondColor}">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
            Name="Button_Close"
            Margin="0 12 10 0"
            Grid.Column="1"
            Click="Button_Close_Click"
            HorizontalAlignment="Right"
            Style="{DynamicResource bntmainclose}"/>

        <Border
            Margin="10"
            Grid.Row="1">

            <Frame
                x:Name="Page_Navigator"
                NavigationUIVisibility="Hidden"/>

        </Border>

    </Grid>
</Window>
