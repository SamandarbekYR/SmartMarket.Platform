<Window x:Class="SmartMarket.Desktop.Windows.ProductsForWindow.SearchProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMarket.Desktop.Components.Loader"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="SearchProductWindow"
        Loaded="Window_Loaded">
    <Border
        Height="500"
        Width="700"
        CornerRadius="8"
        BorderThickness="1"
        BorderBrush="{StaticResource BorderColor}"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                CornerRadius="8 8 0 0"
                Background="#04C217"/>

            <Label
                Grid.Row="0"
                Content="Maxsulotni qidirish"
                Margin="10 0 0 0"
                FontSize="22"
                HorizontalAlignment="Left"
                Foreground="White"
                Style="{DynamicResource TitleLabel}"/>

            <Button
                Name="Close_Button"
                Grid.Row="0"
                HorizontalAlignment="Right"
                Margin="0 0 10 0"
                Click="Close_Button_Click"
                Foreground="White"
                Style="{DynamicResource btnClose}"/>

            <TextBox
                Grid.Row="1"
                Margin="100 5 100 0"
                Name="tb_search"
                TextChanged="tb_search_TextChanged"
                Style="{DynamicResource search}"/>

            <Grid
                Grid.Row="2">

                <local:Loader
                    x:Name="Loader"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>

                <ScrollViewer
                    Margin="2 5 0 10"
                    x:Name="scrollViewer">

                    <StackPanel
                        x:Name="St_Products">

                    </StackPanel>

                </ScrollViewer>

                <Label
                    Name="EmptyData"
                    Visibility="Collapsed"
                    FontSize="16"
                    Foreground="#a6a6a6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Ma'lumot topilmadi."/>

            </Grid>


        </Grid>
        
    </Border>
</Window>
