<UserControl x:Class="SmartMarket.Desktop.Components.ExpenseForComponents.ExpenseComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartMarket.Desktop.Components.ExpenseForComponents"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="520">
    <Grid>
        <Border CornerRadius="8" Background="White">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    x:Name="tbNumber"
                    Grid.Column="0"
                    Text="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="15"
                    FontWeight="SemiBold"
            ></TextBlock>

                <TextBlock
                    x:Name="tbFirstName"
                    Grid.Column="1"
                    Text="Azimjon"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="15"
                    FontWeight="SemiBold"
            ></TextBlock>

                <TextBlock
                    x:Name="tbLastName"
                    Grid.Column="2"
                    Text="Ergashev"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="15"
                    FontWeight="SemiBold"
            ></TextBlock>

                <TextBlock
                    x:Name="tbPhoneNumber"
                    Grid.Column="3"
                    Text="+998996661132"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="15"
                    FontWeight="SemiBold">
                    
                </TextBlock>

            </Grid>
        </Border>
    </Grid>
</UserControl>
