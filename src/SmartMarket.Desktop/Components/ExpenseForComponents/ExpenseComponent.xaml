<UserControl x:Class="SmartMarket.Desktop.Components.ExpenseForComponents.ExpenseComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartMarket.Desktop.Components.ExpenseForComponents"
             mc:Ignorable="d"
             d:DesignHeight="39" d:DesignWidth="1100">
    <Grid>
        <Border Style="{DynamicResource StyleBorder}"
                CornerRadius="8"
                Margin="5 5 5 0"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2.2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    x:Name="tbNumber"
                    Grid.Column="0"
                    Text="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    FontWeight="SemiBold">

                </TextBlock>

                <TextBlock
                    x:Name="tbReason"
                    Grid.Column="1"
                    Text="Abet uchun"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    FontWeight="SemiBold">
                    
                </TextBlock>

                <TextBlock
                    x:Name="tbAmount"
                    Grid.Column="2"
                    Text="100000"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    FontWeight="SemiBold">

                </TextBlock>

                <TextBlock
                    x:Name="tbTypeOfPayment"
                    Grid.Column="3"
                    Text="Naqt"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    FontWeight="SemiBold">

                </TextBlock>

                <TextBlock
                    x:Name="tbPayDesk"
                    Grid.Column="4"
                    Text="Kassa"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    FontWeight="SemiBold">

                </TextBlock>

                <TextBlock
                    x:Name="tbWorker"
                    Grid.Column="5"
                    Text="Abdulvosid"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    FontWeight="SemiBold">

                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
