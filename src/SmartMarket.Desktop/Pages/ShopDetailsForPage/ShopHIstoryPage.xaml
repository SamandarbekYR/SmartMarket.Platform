<Page x:Class="SmartMarket.Desktop.Pages.ShopDetailsForPage.ShopHIstoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartMarket.Desktop.Pages.ShopDetailsForPage"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="ShopHIstoryPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="38"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border
              Grid.Row="0"
              BorderBrush="Black"
              CornerRadius="5 5 0 0"
              BorderThickness="1"
              Background="#d6d6d6"
              >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                    Text="Sotuv tarixi"
                    VerticalAlignment="Center"
                    Margin="15 0 0 0"
                    FontSize="20"
                    FontWeight="DemiBold"
                    ></TextBlock>

                <StackPanel
                    Orientation="Horizontal"
                    Grid.Column="1">

                    <DatePicker
                        x:Name="fromDateTime"
                        Style="{DynamicResource FormDatePicker}"/>
                    
                    <Label
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Content="dan"/>

                </StackPanel>

                <StackPanel
                    Orientation="Horizontal"
                    Grid.Column="2">

                    <DatePicker
                        x:Name="toDateTime"
                        Style="{DynamicResource FormDatePicker}"
                        SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                    
                    <Label
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Content="gacha"/>

                </StackPanel>

                <ComboBox
                    x:Name="workerComboBox"
                    Margin="5 10 10 10"
                    Grid.Column="3"
                    Text="Barcha Sotuvchi"
                    SelectionChanged="WorkerComboBox_SelectionChanged">
                </ComboBox>

                <TextBox
                    x:Name="searchTextBox"
                    Margin="0 0 10 0"
                    Style="{DynamicResource search}"
                    Grid.Column="4"
                    KeyDown="SearchTextBox_KeyDown"/>
            </Grid>
        </Border>

        <Border 
            Background="White"
            Grid.Row="1" 
            BorderBrush="Black" 
            BorderThickness="1 0 1 0">
            <Grid 
                Grid.Row="1" 
                Margin="5 0 15 0"
                x:Name="ShopHIstoryTitle" 
                >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="№"
                    Style="{DynamicResource Label}"/>

                <Label
                    Grid.Column="1"
                    Content="Transaction №"
                    Style="{DynamicResource Label}"/>

                <Label
                    Content="Mahsulot nomi"
                    Grid.Column="2"
                    Style="{DynamicResource Label}"/>

                <Label
                    Grid.Column="3"
                    Content="Narxi"
                    Style="{DynamicResource Label}"/>

                <Label
                    Content="Soni"
                    Grid.Column="4"
                    Style="{DynamicResource Label}"/>
                <Label
                    Grid.Column="5"
                    Content="Umumiy narxi"
                    Style="{DynamicResource Label}"/>

            </Grid>
        </Border>
        <Border 
            Grid.Row="2" 
            CornerRadius="0 0 5 5"  
            BorderThickness="1 0 1 1" 
            BorderBrush="{DynamicResource BorderColor}" 
            Background="White">
            <ScrollViewer Grid.Row="2">
            <StackPanel Grid.Row="2">

                <StackPanel 
                    x:Name="St_productList">
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        </Border>
    </Grid>
</Page>
