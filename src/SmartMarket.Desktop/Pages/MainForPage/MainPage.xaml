<Page x:Class="SmartMarket.Desktop.Pages.MainForPage.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartMarket.Desktop.Pages.MainForPage"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1024"
      Title="MainPage">

    <Grid Background="#D9D9D9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.8*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="35" Background="Red" Margin="2 0 2 5" CornerRadius="8 8 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Kategoriya" VerticalAlignment="Center" FontSize="15" Padding="25 0 0 0" Foreground="White" DockPanel.Dock="Left"/>

                    <Button Grid.Column="1"
                        Style="{DynamicResource btnCategory}">


                    </Button>

                </Grid>
            </Border>

            <Border Grid.Row="1" >
                <ScrollViewer>
                    <StackPanel x:Name="St_categoryList" Visibility="Collapsed">
                       
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Height="30" Background="#A59C9C" CornerRadius="8 8 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Mahsulotlar" 
                                   VerticalAlignment="Center" 
                                   FontSize="18" Padding="25 0 0 0" Foreground="Black" DockPanel.Dock="Left"/>

                        
                        
                        
                        <Border Grid.Column="1" Margin="50 4 350 4"
                                Background="White"
                                CornerRadius="10"
                                >
                            <DockPanel>
                                <md:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             Margin="5 0 0 0"
                                             />
                                <TextBox
                                    x:Name="tbSearch"
                                    BorderThickness="0"
                                    FontSize="13"
                                    VerticalAlignment="Center"
                                    Margin="5 0 15 0"
                                    ></TextBox>
                            </DockPanel>
                        </Border>

                        
                        
                        <Button x:Name="btnProductCreate" 
                                Grid.Column="2" 
                                Width="90" Height="25"
                                Style="{StaticResource MenuButton}"
                                Background="#0AB1F9"
                                BorderBrush="#0AB1F9"
                                Click="btnProductCreate_Click">
                            <Button.Content>
                                <TextBlock Text="Qo'shish"
                                           FontSize="14" 
                                           HorizontalAlignment="Center"
                                           Foreground="Black"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="1.6*"/>
                        <ColumnDefinition Width="1.7*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="N%"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               
                               ></TextBlock>
                    <TextBlock Grid.Column="1"
                               Text="P-Code"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               ></TextBlock>
                    <TextBlock Grid.Column="2"
                               Text="Barcode"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               ></TextBlock>
                    <TextBlock Grid.Column="3"
                               Text="Mahsulot Nomi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               ></TextBlock>
                    <TextBlock Grid.Column="4"
                               Text="Kategoriya"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               ></TextBlock>
                    <TextBlock Grid.Column="5"
                               Text="Ishchi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               ></TextBlock>
                    <TextBlock Grid.Column="6"
                               Text="Tan Narxi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0 0 15 0"
                               ></TextBlock>
                    <TextBlock Grid.Column="7"
                               Text="Soni"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0 0 15 0"
                               ></TextBlock>
                    <TextBlock Grid.Column="8"
                               Text="Jami Summa"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0 0 15 0"
                               ></TextBlock>
                    <TextBlock Grid.Column="9"
                               Text="O'lchov"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0 0 15 0"
                               ></TextBlock>
                    <TextBlock Grid.Column="10"
                               Text="Sotuv Narxi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0 0 15 0"
                               ></TextBlock>
                    
                </Grid>
                <Border Grid.Row="2">

                   <ScrollViewer>
                       <StackPanel x:Name="St_product">
                           
                           
                       </StackPanel>
                   </ScrollViewer>

                </Border>
                
            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Height="30" Background="#A59C9C" CornerRadius="8 8 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Kategoriyalar" 
                                   VerticalAlignment="Center" 
                                   FontSize="18" Padding="25 0 0 0"
                                   HorizontalAlignment="Left"
                                   Foreground="Black" />




                        <Border Grid.Column="1" Margin="50 4 350 4"
                                Background="White"
                                CornerRadius="10"
                                >
                            <DockPanel>
                         <md:PackIcon Kind="Search"
                                      VerticalAlignment="Center"
                                      Margin="5 0 0 0"
                                      />
                                <TextBox
                                        x:Name="tbSearchCategoey"
                                       BorderThickness="0"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       Margin="5 0 15 0"
                                       ></TextBox>
                            </DockPanel>
                        </Border>



                        <Button 
                                 Grid.Column="2" 
                                 Width="90" Height="25"
                                 Style="{StaticResource MenuButton}"
                                 Background="#0AB1F9"
                                 BorderBrush="#0AB1F9"
                                 Click="btnProductCreate_Click">
                            <Button.Content>
                                <TextBlock Text="Qo'shish"
                                           FontSize="14" 
                                           HorizontalAlignment="Center"
                                           Foreground="Black"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/> 
                    </Grid.ColumnDefinitions>
                </Grid>

                <StackPanel
                    Grid.Row="2"
                    >

                    <!--  -->
                </StackPanel>
                
            </Grid>
     
        </Grid>
        
    </Grid>
</Page>
