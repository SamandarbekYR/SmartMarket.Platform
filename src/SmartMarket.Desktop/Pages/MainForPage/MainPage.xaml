<Page x:Class="SmartMarket.Desktop.Pages.MainForPage.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartMarket.Desktop.Pages.MainForPage"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1024"
      Title="MainPage">

    <Grid Background="#D9D9D9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="35" Background="Red" Margin="5 3 5 0" CornerRadius="5 5 0 0" BorderThickness="1 1 1 0" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Kategoriya" VerticalAlignment="Center" FontSize="15" Padding="25 0 0 0" Foreground="White" DockPanel.Dock="Left"/>

                    <Button Grid.Column="1"
                            x:Name="btnAddCategory"
                            Click="btnAddCategory_Click"
                        Style="{DynamicResource btnCategory}" Margin="0,4,0,4" VerticalAlignment="Bottom">


                    </Button>

                </Grid>
            </Border>

            <Border Grid.Row="1" Margin="5 -1 5 3" BorderBrush="Black" BorderThickness="1 0 1 1" CornerRadius="0 0 5 5" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel x:Name="St_categoryList" Visibility="Collapsed">

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Height="30" Background="#A59C9C" CornerRadius="5 5 0 0" Margin="0 3 5 0" BorderThickness="1 1 1 0" BorderBrush="Black">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Mahsulotlar" 
                                   VerticalAlignment="Center" 
                                   FontSize="18" Padding="25 0 0 0" Foreground="Black" DockPanel.Dock="Left"/>




                        <Border Grid.Column="1" Margin="50 4 350 4"
                                Background="White"
                                CornerRadius="10"
                                >
                            <DockPanel>
                                <md:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             Margin="5 0 0 0"
                                             />
                                <TextBox
                                    x:Name="tbSearch"
                                    BorderThickness="0"
                                    FontSize="13"
                                    VerticalAlignment="Center"
                                    Margin="5 0 15 0"
                                    ></TextBox>
                            </DockPanel>
                        </Border>



                        <Button x:Name="btnProductCreate" 
                                Grid.Column="2" 
                                Width="90" Height="25"
                                Style="{StaticResource MenuButton}"
                                Background="#0AB1F9"
                                BorderBrush="#0AB1F9"
                                Click="btnProductCreate_Click">
                            <Button.Content>
                                <TextBlock Text="Qo'shish"
                                           FontSize="14" 
                                           HorizontalAlignment="Center"
                                           Foreground="Black"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Margin="0 0 5 0" Background="White" BorderBrush="Black" BorderThickness="1 0 1 0">
                    <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.6*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="N%"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="5 0 0 0"
                                FontSize="15"
                                FontWeight="SemiBold"
                               ></TextBlock>
                    <TextBlock Grid.Column="1"
                               Text="P-Code"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Margin="3 0 0 0"
                               ></TextBlock>
                    <TextBlock Grid.Column="2"
                               Text="Barcode"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Margin="3 0 0 0"
                               ></TextBlock>
                    <TextBlock Grid.Column="3"
                               Text="Mahsulot Nomi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="15"
                               FontWeight="SemiBold"
                               ></TextBlock>
                    <TextBlock Grid.Column="4"
                               Text="Kategoriya"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="15"
                               Margin="0 0 3 0"
                               FontWeight="SemiBold"
                               ></TextBlock>
                    <TextBlock Grid.Column="5"
                               Text="Ishchi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Margin="7 0 0 0"
                               ></TextBlock>
                    <TextBlock Grid.Column="6"
                               Text="Tan Narxi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                            
                               FontSize="15"
                               FontWeight="SemiBold"
                               ></TextBlock>
                    <TextBlock Grid.Column="7"
                               Text="Soni"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               
                               FontSize="15"
                               FontWeight="SemiBold"
                               ></TextBlock>
                    <TextBlock Grid.Column="8"
                               Text="Jami Summa"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                              
                               FontSize="15"
                               FontWeight="SemiBold"
                               ></TextBlock>
                    <TextBlock Grid.Column="9"
                               Text="O'lchov"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               
                               FontSize="15"
                               FontWeight="SemiBold"
                               ></TextBlock>
                    <TextBlock Grid.Column="10"
                               Text="Sotuv Narxi"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                              
                               FontSize="15"
                               FontWeight="SemiBold"
                               ></TextBlock>

                </Grid>
                </Border>
                <Border Grid.Row="2" Margin="0 0 5 2" Background="White" CornerRadius="0 0 5 5" BorderThickness="1 0 1 1" BorderBrush="Black">

                    <ScrollViewer>
                        <StackPanel x:Name="St_product">


                        </StackPanel>
                    </ScrollViewer>

                </Border>

            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Height="30" Background="#A59C9C" CornerRadius="5 5 0 0" Margin="0 0 5 0" BorderThickness="1 1 1 0" BorderBrush="Black">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Kontr Agentlar" 
                                   VerticalAlignment="Center" 
                                   FontSize="18" Padding="25 0 0 0"
                                   HorizontalAlignment="Left"
                                   Foreground="Black" />




                        <Border Grid.Column="1" Margin="50 4 350 4"
                                Background="White"
                                CornerRadius="10"
                                >
                            <DockPanel>
                                <md:PackIcon Kind="Search"
                                      VerticalAlignment="Center"
                                      Margin="5 0 0 0"
                                      />
                                <TextBox
                                        x:Name="tbSearchCategoey"
                                       BorderThickness="0"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       Margin="5 0 15 0"
                                       ></TextBox>
                            </DockPanel>
                        </Border>



                        <Button 
                            x:Name="btnAddKontrAgent"
                            Click="btnAddKontrAgent_Click"
                                 Grid.Column="2" 
                                 Width="90" Height="25"
                                 Style="{StaticResource MenuButton}"
                                 Background="#0AB1F9"
                                 BorderBrush="#0AB1F9"
                                 >
                            <Button.Content>
                                <TextBlock Text="Qo'shish"
                                           FontSize="14" 
                                           HorizontalAlignment="Center"
                                           Foreground="Black"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>


                <Border Grid.Row="1" Margin="0 0 5 0" BorderBrush="Black" BorderThickness="1 0 1 0" Background="White">
                    <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.2*"/>
                        <ColumnDefinition Width="1.8*"/>
                        <ColumnDefinition Width="1.8*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Text="No"
                        VerticalAlignment="Center"
                        Margin="5 0 0 0"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>
                    <TextBlock
                        Grid.Column="1"
                        Text="Firma"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>
                    <TextBlock
                        Grid.Column="2"
                        Text="Ism"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>
                    <TextBlock
                        Grid.Column="3"
                        Text="Familiya"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>
                    <TextBlock
                        Grid.Column="4"
                        Text="Telefon nomer"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>
                    <TextBlock
                        Grid.Column="5"
                        Text="Qarz miqdori"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>

                    <TextBlock
                        Grid.Column="6"
                        Text="Qilingan to'lov"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>
                    <TextBlock
                        Grid.Column="7"
                        Text="Oxirgi to'lov"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>

                    <TextBlock
                        Grid.Column="8"
                        Text="Oxirgi to'lov sanasi"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        ></TextBlock>
                </Grid>
                </Border>


                <Border Grid.Row="2"  Margin="0 0 5 3"
                        CornerRadius="0 0 5 5" BorderThickness="1 0 1 1" BorderBrush="Black" Background="White"
                        >
                    <StackPanel 
                    >

                    <!--  -->
                </StackPanel>
                </Border>

            </Grid>

        </Grid>

    </Grid>
</Page>
