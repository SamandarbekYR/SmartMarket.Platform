<Page x:Class="SmartMarket.Desktop.Pages.ExpensesForPage.CargoReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartMarket.Desktop.Pages.ExpensesForPage"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CargoReportPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border
         Grid.Row="0"
         BorderBrush="Black"
         CornerRadius="5 5 0 0"
         BorderThickness="1"
         Background="#A49B9B"
         >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                      Text="Harajatlar"
                      VerticalAlignment="Center"
                      Margin="15 0 0 0"
                      FontSize="20"
                      FontWeight="DemiBold"
                      ></TextBlock>


                <ComboBox
                    x:Name="cb_Firma"
                    Grid.Column="1"
                    Margin="10 5 10 5"
                    ></ComboBox>
                
                
                <DockPanel Grid.Column="2">
                    <TextBlock Text="Dan:"
                          VerticalAlignment="Center"
                          FontSize="18"
                          Foreground="White"
                          ></TextBlock>
                    <Border Margin="5 5 15 5"
                       Background="White"
                       CornerRadius="5"
                       >
                        <DatePicker
          
                          VerticalAlignment="Center"
                          Margin="10 0 0 0"
                          FontSize="18"
                          BorderThickness="0"
                          ></DatePicker>
                    </Border>
                </DockPanel>


                <DockPanel Grid.Column="3">
                    <TextBlock Text="gacha:"
                          VerticalAlignment="Center"
                          FontSize="18"
                          Foreground="White"
                          ></TextBlock>
                    <Border Margin="5 5 15 5"
                       Background="White"
                       CornerRadius="5"
                       >
                        <DatePicker
                         Text="20/08/2024"
                         VerticalAlignment="Center"
                         Margin="10 0 0 0"
                         FontSize="18"
                         BorderThickness="0"
                         ></DatePicker>
                    </Border>
                </DockPanel>

              

                <Border Grid.Column="4"
                   Margin="10 5"
                   CornerRadius="5"
                   Background="White"
                   >
                    <DockPanel>
                        <md:PackIcon Kind="Search"
                    VerticalAlignment="Center"
                    Margin="5 0 0 0"
                    ></md:PackIcon>
                        <TextBox
                         VerticalAlignment="Center"
                         Margin="5 0 0 5"
                         BorderThickness="0"
                         FontWeight="SemiBold"
                         Padding="0 2 0 0"
                         ></TextBox>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>
        <Grid
            Grid.Row="1"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="No"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="1"
                Text="P-Code"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="2"
                Text="Barcode"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="3"
                Text="Mahsulot nomi"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="4"
                Text="Kategoriya"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="5"
                Text="Ishchi"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Text="Tan Narxi"
                Grid.Column="6"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="7"
                Text="Soni"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="8"
                Text="Jami summasi"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="9"
                Text="O'lchov"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="10"
                Text="Sana"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="11"
                Text="Firma"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>
            
        </Grid>

    </Grid>
</Page>
