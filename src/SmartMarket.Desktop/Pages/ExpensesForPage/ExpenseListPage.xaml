<Page x:Class="SmartMarket.Desktop.Pages.ExpensesForPage.ExpenseListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartMarket.Desktop.Pages.ExpensesForPage"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="ExpenseListPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border
            Background="#D6D6D6"
            Grid.Row="0"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            CornerRadius="5 5 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Grid.Column="0"
                    Text="Yig'ilgan yuklar"
                    VerticalAlignment="Center"
                    Margin="15 0 0 0"
                    FontSize="20"
                    FontWeight="DemiBold"
                    ></TextBlock>

                <StackPanel
                    Orientation="Horizontal"
                    Grid.Column="1">


                    <DatePicker
                        Style="{DynamicResource FormDatePicker}"/>
                    <Label
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Content="dan"/>

                </StackPanel>

                <StackPanel
                    Orientation="Horizontal"
                    Grid.Column="2">

                    <DatePicker
                        Style="{DynamicResource FormDatePicker}"/>
                    <Label
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Content="gacha"/>

                </StackPanel>

                <ComboBox
                    Margin="5 10 10 10"
                    Grid.Column="3">
                    <ComboBoxItem 
                        IsEnabled="False" 
                        IsSelected="True"
                        Content="Sotuvchi"/>
                    <ComboBoxItem
                        Content="Aziz"/>
                    <ComboBoxItem
                        Content="Po'lat"/>
                </ComboBox>


                <TextBox
                    Margin="0 0 10 0"
                    Style="{DynamicResource search}"
                    Grid.Column="4"/>
            </Grid>
        </Border>



        <Border 
            Grid.Row="1" 
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1 0 1 0" 
            Background="White">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="No"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                Margin="10 0 0 0"
                ></TextBlock>

            <TextBlock
                Grid.Column="1"
                Text="Harajat sababi"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>
            <TextBlock
                Grid.Column="2"
                Text="Harajat summasi"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="3"
                Text="Turi"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="4"
                Text="Qayerdan"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                ></TextBlock>

            <TextBlock
                Grid.Column="5"
                Text="Pul beruvchi"
                FontSize="15"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                ></TextBlock>
            
        </Grid>
        </Border>


        <Border
            Grid.Row="2"
            Background="White"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1 0 1 1"
            CornerRadius="0 0 5 5"
            >
            <ScrollViewer 
                VerticalScrollBarVisibility="Auto" 
                HorizontalScrollBarVisibility="Auto">
                <StackPanel 
                    x:Name="St_Expenses">
                   
                </StackPanel>
            </ScrollViewer>
        </Border>
        
    </Grid>
</Page>
